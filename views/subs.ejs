<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.classless.min.css"
    />
    <link href="/css/style.css" rel="stylesheet" />
    <title>Subs</title>
  </head>
  <body>
    <main>
      <div class="authOptions">
        <h1>Sub Groups</h1>
        <a role="button" href="/posts">Home</a>
      </div>
      <div>
        <p>Choose a breaddit. Maybe Rye?</p>
        <% subgroup_sorted = subgroups.sort(function(a, b){ return (a<b) ? -1 : 1}) %>
        <% subgroup_sorted.forEach(sub => { %>
          <div class="Subgroups">
            <a href="/subs/show/<%=sub%>"><%= sub %></a>
          </div>
          <% }) %>
      </div>
    </main>
  </body>
</html>
